{
  "compilerOptions": {
    // --- Add this line ---
    "baseUrl": ".",
    // --------------------
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6", // Consider changing to "esnext" if compatible with your project
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"] // This should now work correctly with baseUrl defined
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}